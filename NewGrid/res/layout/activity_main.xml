
    <com.example.newgrid.widget.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view"
        >
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="hdh"
                android:background="@drawable/item_bg_click"
                android:id="@+id/top_view"
                />  
              <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/linear_layout"
                  >
                   <com.example.newgrid.widget.MyGridView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                    android:id="@+id/grid_view"
                   >        
            </com.example.newgrid.widget.MyGridView>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="100dp"             
                android:background="@drawable/item_bg_click"
                android:id="@+id/placeholder"
                />  
              </LinearLayout>        
            
            
        </FrameLayout>
        
    </com.example.newgrid.widget.ObservableScrollView>

